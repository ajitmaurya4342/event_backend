{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "checkJs": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "removeComments": false,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
    ".env",
    ".eslintrc.js",
    "ecosystem.config.js",
    "knexfile.ts",
    "knexfile.js",
    "**/*global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "src/http",
    "src/logs"
  ]
}
